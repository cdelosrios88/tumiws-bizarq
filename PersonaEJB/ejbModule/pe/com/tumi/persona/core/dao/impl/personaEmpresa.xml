<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" 
	"http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="PersonaEmpresaDaoIbatis">

  <typeAlias type="pe.com.tumi.persona.core.domain.PersonaEmpresa" alias="PersonaEmpresa"/> 
	
  <resultMap id="resPersonaEmpresa" class="PersonaEmpresa" >
     <result property="id.intIdEmpresa"      	column="pEMPRESA_N" />
     <result property="id.intIdPersona"    		column="pPERSONA_N" />
  </resultMap>
  
  <parameterMap id="parPersonaEmpresa" class="PersonaEmpresa">
     <parameter property="id.intIdEmpresa"		jdbcType="NUMERIC"  javaType="java.lang.Integer" 	mode="INOUT"/>
	 <parameter property="id.intIdPersona"		jdbcType="NUMERIC"  javaType="java.lang.Integer" 	mode="INOUT"/>    
  </parameterMap>
  
  <parameterMap id="parPorPK" class="java.util.Map">
   	 <parameter property="cursorLista" 		javaType="java.sql.ResultSet" jdbcType="ORACLECURSOR"  mode="OUT"/>
   	 <parameter property="intIdEmpresa" 	javaType="java.lang.Integer"  jdbcType="NUMERIC" 	   mode="IN"/>
   	 <parameter property="intIdPersona" 	javaType="java.lang.Integer"  jdbcType="NUMERIC" 	   mode="IN"/>
  </parameterMap>
   
   <parameterMap id="parPorIdPersona" class="java.util.Map">
   	 <parameter property="cursorLista" 		javaType="java.sql.ResultSet" jdbcType="ORACLECURSOR"  mode="OUT"/>
   	 <parameter property="intIdPersona" 	javaType="java.lang.Integer"  jdbcType="NUMERIC" 	   mode="IN"/>
  </parameterMap>
  
  <parameterMap id="parPorIdEmpresa" class="java.util.Map">
   	 <parameter property="cursorLista" 		javaType="java.sql.ResultSet" jdbcType="ORACLECURSOR"  mode="OUT"/>
   	 <parameter property="intIdEmpresa" 	javaType="java.lang.Integer"  jdbcType="NUMERIC" 	   mode="IN"/>
  </parameterMap>
  
  <procedure id="grabar" parameterMap="parPersonaEmpresa">
	{ call PKG_PERSONAEMPRESA.grabar(?,?)  }  
  </procedure>
  
  <procedure id="modificar" parameterMap="parPersonaEmpresa" >
	{ call PKG_PERSONAEMPRESA.modificar(?,?)  }  
  </procedure>
  
  <procedure id="getListaPorPK" parameterMap="parPorPK" resultMap="resPersonaEmpresa">
	{ call PKG_PERSONAEMPRESA.getListaPorPK(?,?,?) }  
  </procedure>
  
  <procedure id="getListaPorIdPersona" parameterMap="parPorIdPersona" resultMap="resPersonaEmpresa">
	{ call PKG_PERSONAEMPRESA.getListaPorIdPersona(?,?) }  
  </procedure>
  
  <procedure id="getListaPorIdEmpresa" parameterMap="parPorIdEmpresa" resultMap="resPersonaEmpresa">
	{ call PKG_PERSONAEMPRESA.getListaPorIdEmpresa(?,?) }  
  </procedure>
    
</sqlMap>  