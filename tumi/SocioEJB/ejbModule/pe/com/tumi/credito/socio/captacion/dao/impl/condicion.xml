<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" 
	"http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="CondicionDaoIbatis">

	<typeAlias type="pe.com.tumi.credito.socio.captacion.domain.Condicion"
		alias="Condicion" />

	<resultMap id="resCondicion" class="Condicion">
		<result property="id.intPersEmpresaPk" column="pPERS_EMPRESA_N_PK" />
		<result property="id.intParaTipoCaptacionCod" column="pPARA_TIPOCAPTACION_N_COD" />
		<result property="id.intItem" column="pITEM_N" />
		<result property="id.intParaCondicionSocioCod" column="pPARA_CONDICIONSOCIO_N_COD" />
		<result property="intValor" column="pVALOR_N" />
	</resultMap>

	<resultMap id="resCondicionSocio" class="Condicion">
		<result property="id.intParaCondicionSocioCod" column="pPARA_CONDICIONSOCIO_N_COD" />
	</resultMap>

	<parameterMap id="parCondicion" class="Condicion">
		<parameter property="id.intPersEmpresaPk" javaType="java.lang.Integer"
			jdbcType="NUMERIC" mode="INOUT" />
		<parameter property="id.intParaTipoCaptacionCod" javaType="java.lang.Integer"
			jdbcType="NUMERIC" mode="INOUT" />
		<parameter property="id.intItem" javaType="java.lang.Integer"
			jdbcType="NUMERIC" mode="INOUT" />
		<parameter property="id.intParaCondicionSocioCod" javaType="java.lang.Integer"
			jdbcType="NUMERIC" mode="INOUT" />
		<parameter property="intValor" javaType="java.lang.Integer"
			jdbcType="NUMERIC" mode="INOUT" />
	</parameterMap>

	<parameterMap id="parPorPK" class="java.util.Map">
		<parameter property="cursorLista" javaType="java.sql.ResultSet"
			jdbcType="ORACLECURSOR" mode="OUT" />
		<parameter property="intPersEmpresaPk" javaType="java.lang.Integer"
			jdbcType="NUMERIC" mode="IN" />
		<parameter property="intParaTipoCaptacionCod" javaType="java.lang.Integer"
			jdbcType="NUMERIC" mode="IN" />
		<parameter property="intItem" javaType="java.lang.Integer"
			jdbcType="NUMERIC" mode="IN" />
		<parameter property="intParaCondicionSocioCod" javaType="java.lang.Integer"
			jdbcType="NUMERIC" mode="IN" />
	</parameterMap>

	<parameterMap id="parPorPKCaptacion" class="java.util.Map">
		<parameter property="cursorLista" javaType="java.sql.ResultSet"
			jdbcType="ORACLECURSOR" mode="OUT" />
		<parameter property="intPersEmpresaPk" javaType="java.lang.Integer"
			jdbcType="NUMERIC" mode="IN" />
		<parameter property="intParaTipoCaptacionCod" javaType="java.lang.Integer"
			jdbcType="NUMERIC" mode="IN" />
		<parameter property="intItem" javaType="java.lang.Integer"
			jdbcType="NUMERIC" mode="IN" />
	</parameterMap>

	<procedure id="grabar" parameterMap="parCondicion">
		{ call PKG_CONFCAPTCONDICION.grabar(?,?,?,?,?) }  
  </procedure>

	<procedure id="modificar" parameterMap="parCondicion">
		{ call PKG_CONFCAPTCONDICION.modificar(?,?,?,?,?) }  
  </procedure>

	<procedure id="getListaPorPk" parameterMap="parPorPK"
		resultMap="resCondicion">
		{ call PKG_CONFCAPTCONDICION.getListaPorPK(?,?,?,?,?) }  
  </procedure>

	<procedure id="getListaPorPkCaptacion" parameterMap="parPorPKCaptacion"
		resultMap="resCondicion">
		{ call PKG_CONFCAPTCONDICION.getListaPorPkCaptacion(?,?,?,?) }
	</procedure>

	<procedure id="getListaCondicionSocioPorPkCaptacion"
		parameterMap="parPorPKCaptacion" resultMap="resCondicionSocio">
		{ call PKG_CONFCAPTCONDICION.getCondSocioPorPkCaptacion(?,?,?,?) }
	</procedure>

</sqlMap>  